
@model IEnumerable<_360HighScoresv2.Models.Faceit>

@{
    ViewBag.Title = "Liste";
    var modelOrdered = Model.OrderByDescending(m => m.Elo);
    int rang = 1;
}
<div class="container mx-auto">
    <div class="flex justify-center px-36">
        <table class=" table-auto text-center">
            <thead class="border-b bg-orange-600">
                <tr>
                    <th scope="col" class="text-sm font-medium text-white px-6 py-4">
                        Rang
                    </th>
                    <th scope="col" class="text-sm font-medium text-white px-6 py-4">
                        @Html.DisplayNameFor(model => model.Navn)
                    </th>
                    <th scope="col" class="text-sm font-medium text-white px-6 py-4">
                        @Html.DisplayNameFor(model => model.Elo)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="bg-white border-b">
                        <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap bg-grey">
                            @(rang++)
                        </td>
                        <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                            @Html.DisplayFor(modelItem => item.Navn)
                        </td>
                        <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                            @Html.DisplayFor(modelItem => item.Elo)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



